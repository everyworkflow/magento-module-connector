<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="everyworkflow" translate="label" sortOrder="500">
            <label>EveryWorkflow</label>
        </tab>
        <section id="ew_connect" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>EW Connect</label>
            <tab>everyworkflow</tab>
            <resource>EveryWorkflow_Connector::ew_connect_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Module Status</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="mode" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Module Mode</label>
                    <source_model>EveryWorkflow\Connector\Model\Config\Source\EveryWorkflowMode</source_model>
                </field>
            </group>
        </section>
        <section id="ew_mage_admin" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>EW Mage Admin</label>
            <tab>everyworkflow</tab>
            <resource>EveryWorkflow_Connector::ew_mage_admin_config</resource>
            <group id="test" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Test Configuration</label>
                <field id="mage_admin_css_href" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Mage admin css href</label>
                    <comment>Magento admin panel CSS style link URL</comment>
                </field>
                <field id="mage_admin_js_runtime_src" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Mage admin JS runtime src</label>
                    <comment>Magento admin panel Javascript runtime source link URL</comment>
                </field>
                <field id="mage_admin_js_src" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Mage admin JS src</label>
                    <comment>Magento admin panel Javascript source link URL</comment>
                </field>
            </group>
            <group id="prod" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Prod Configuration</label>
                <field id="mage_admin_css_href" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Mage admin css href</label>
                    <comment>Magento admin panel CSS style link URL</comment>
                </field>
                <field id="mage_admin_js_runtime_src" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Mage admin JS runtime src</label>
                    <comment>Magento admin panel Javascript runtime source link URL</comment>
                </field>
                <field id="mage_admin_js_src" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Mage admin JS src</label>
                    <comment>Magento admin panel Javascript source link URL</comment>
                </field>
            </group>
        </section>
    </system>
</config>
